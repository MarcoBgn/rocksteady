%nav.navbar.navbar-expand-lg{ class: header_html_classes }
  .navbar-brand
    = link_to application_name, apps_path

  %button.navbar-toggler{type: :button, data: { toggle: :collapse, target: '#navbarSupportedContent' } }
    %span.navbar-toggler-icon

  .collapse.navbar-collapse#navbarSupportedContent
    %ul.navbar-nav.mr-auto
      %li.nav-item{ class: (:active if ['apps', 'jobs'].include?(controller.controller_name)) }
        = link_to 'Apps', apps_path, class: :'nav-link'
